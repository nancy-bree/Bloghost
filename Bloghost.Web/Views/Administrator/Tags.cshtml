@model PagedList.IPagedList<Bloghost.Core.Entities.Tag>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Tags";
}

@section Header
{
    <div id="header">
		<h1 class="title">@ViewBag.Title</h1>
	</div>
} 

<p>
    @Html.ActionLink("Add New", "AddTag")
</p>
<div class="form-block">
<table class="hovered">
    <thead>
        <tr>
            <th >Name</th>
            <th style="width:20%;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Index", "Tag", new { id = item.ID}, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditTag", new { id=item.ID })
            </td>
        </tr>
        }
    </tbody>
</table>
    </div>
@Html.PagedListPager(Model, page => Url.Action("Tags", new RouteValueDictionary() {{ "page", page }}), PagedListRenderOptions.PageNumbersOnly)
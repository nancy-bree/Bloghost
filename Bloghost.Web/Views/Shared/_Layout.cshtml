
@{
  Layout = null;
  var action = ((string)ViewContext.RouteData.Values["Action"]).ToLower();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8"/>
    <link href='@Url.Content("http://fonts.googleapis.com/css?family=Open+Sans&subset=latin,cyrillic-ext")' rel='stylesheet' type='text/css'/>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <title>@ViewBag.Title</title>
    @System.Web.Optimization.Styles.Render("~/Content/themes/style.css")
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    @RenderSection("head", required: false)
</head>
<body>
    <div id="wrapper">
		<div id="menu">
            @Html.Partial("~/Views/Shared/_Menu.cshtml")
		</div>
        @if(IsSectionDefined("Header"))
        {
            @RenderSection("Header")
        }
		<div id="content">
		    @RenderBody()
            @if (IsSectionDefined("Sidebar"))
            {
                @RenderSection("Sidebar")
            }
            <div class="clear"/>
		</div>
		<div id="footer">
			<div id="footer_content">
				<span>@DateTime.Now.Year, &copy; by Nancy Bree</span>
			</div>
		</div>
	</div>
</body>
</html>
